	gcc {{options}} {{smaller}} -o vlq.exe vlq.c

words:
	gcc {{options}} {{smaller}} -o words.exe words.c

implementation_defined:
	gcc {{options}}  {{smaller}} -o implementation_defined.exe implementation_defined.c
